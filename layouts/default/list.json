{{- /* Sort pages by date descending so that the latest posts come first */ -}}
{{- $pages := .Site.RegularPages.ByDate.Reverse -}}
{{- $posts := slice -}}
{{- range $page := $pages -}}
  {{- $item := dict 
        "title" $page.Title 
        "link" $page.Permalink 
        "description" $page.Summary 
        "featuredImage" (or $page.Params.image "") 
  -}}
  {{- $posts = $posts | append $item -}}
{{- end -}}
{{ $posts | jsonify }}
